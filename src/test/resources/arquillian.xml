<arquillian xmlns="http://www.jboss.org/arquillian-1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.org/arquillian-1.0 http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

	<engine>
		<property name="deploymentExportPath">target/</property>
	</engine>

	<defaultProtocol type="Servlet 3.0" />

	<container qualifier="jboss-remote">
		<configuration>
			<property name="jbossHome">g:/tools/jboss-eap-7.3/</property>
		</configuration>
	</container>
	
    <!-- Configuration to be used when the WildFly managed profile is active -->
    <container qualifier="jboss-managed">
        <configuration>
            <property name="jbossHome">${jbossHome:target/jboss_nie_mam_artefaktu}</property>
        </configuration>
    </container>
    
        <container qualifier="wildfly-managed">
        <configuration>
            <property name="jbossHome">${jbossHome:target/wildfly-21.0.0.Final}</property>
            <property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=128m
                -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y
            </property>
        </configuration>
    </container>
	
</arquillian>
